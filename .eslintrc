
{
    "env": {
      "es6": true,
      "node": true,
      "jest/globals": true
    },
    "extends": [
      "standard",
      "prettier",
      "plugin:react/recommended",
      "prettier/react",
      "prettier/standard"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2016,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": ["react", "prettier", "jest"],
    "rules": {
      "quotes": [2, "single"],
      "no-console": "error",
      "import/no-unresolved": [2, { "commonjs": true, "amd": true}],
      "block-spacing": "error",
      "prefer-const": "error",
      "standard/computed-property-even-spacing": 0,
      "react/jsx-indent": [2, 2],
      "linebreak-style": 0,
      "no-unused-vars": [
        "error",
        { "vars": "all",
          "args": "after-used",
          "ignoreRestSiblings": false
        }
      ],
      "object-shorthand": "error",
      "react/no-did-mount-set-state": [2, "disallow-in-func"]
    },
    "globals": {
      "fetch": false,
      "after": true,
      "afterEach": true,
      "before": true,
      "beforeEach": true,
      "context": true,
      "describe": true,
      "it": true
    }
  }